@model IEnumerable<MvcBooks.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Book Library</h1>

<p class="mt-3 mb-3">
    @* Link to the Create action, ensure user is authorized if needed (controller handles actual creation auth) *@
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Book
    </a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        No books have been added to the library yet. Click "Add New Book" to get started!
    </div>
}
else
{
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>
                    @* @Html.DisplayNameFor(model => model.FirstOrDefault().CoverImageUrl) *@ @* Optional: Cover Column *@
                    Cover
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Author)
                </th>
                <th>
                    Categories
                </th>
                <th>
                    @* @Html.DisplayNameFor(model => model.FirstOrDefault().User.UserName) *@ @* Optional: Added By Column *@
                    Added By
                </th>
                <th style="width: 180px;">Actions</th> @* Fixed width for action buttons *@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center align-middle">
                        <img src="@(string.IsNullOrEmpty(item.CoverImageUrl) ? "/images/placeholder-cover.png" : item.CoverImageUrl)"
                             alt="Cover for @item.Title"
                             style="max-height: 60px; width: auto;"
                             class="img-thumbnail"
                             onerror="this.onerror=null; this.src='/images/placeholder-cover.png';" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td class="align-middle small">
                        @if (item.Categories != null && item.Categories.Any())
                        {
                            @string.Join(", ", item.Categories.Select(c => c.Name))
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                     <td class="align-middle small">
                        @* Display username if User is loaded and not null *@
                        @(item.User?.UserName ?? "N/A")
                    </td>
                    <td class="align-middle text-center">
                        <div class="btn-group" role="group" aria-label="Book Actions">
                             <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="View Details">
                                <i class="fas fa-info-circle"></i> Details
                             </a>
                             @* Only show Edit/Delete if user is authorized (controller enforces on POST, but good UX to hide link too) *@
                             @* Assuming you might pass IsOwner or IsAdmin via ViewData or check here - simple version shows links *@
                             <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Edit Book">
                                <i class="fas fa-edit"></i> Edit
                             </a>
                             <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete Book">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@* Include Font Awesome if you want icons *@
@section Scripts {
     <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}